  body.landing
    // Header
    header#header
      h1
        a(href='index.html') CodeBursts
      nav#nav
        ul
          li
            a(href='/') Home
          li
            a(href='/problem') Problems
          li
            a(href='/status') Status
          if login && login.username
            li
              a(href='/login') Welcome, #{login.username}!
            li
              a.button.special(href='/login/logout') Logout
          else
            li
              a.button.special(href='/login') Login
    // Banner
    section#banner
      h2 Welcome to CodeBursts!
      p This is an OnlineJudge System hosted for OIers.
      ul.actions
        if login && login.username
          li
            a.button.big(href='#') Welcome, #{login.username}!
          if login.admin
            li
              a.button(href='/admin', style='background-color: red') Admin Panel
          else
            li
              a.button(href='/login/logout', style='background-color: red') Logout
        else
          li
            a.button.big(href='#') Sign up Now!
    // One
    section#one.wrapper.style1.special
      .container
        header.major
          h2 Latest Notice
          p Latest Notice of CodeBursts
        .row(class='150%')
          .4u(class='12u$(medium)')
            section.box
              i.icon.big.rounded.color1.fa-cloud
              h3 Nothing
              p Nothing
          .4u(class='12u$(medium)')
            section.box
              i.icon.big.rounded.color9.fa-desktop
              h3 Nothing
              p Nothing
          div(class='4u$ 12u$(medium)')
            section.box
              i.icon.big.rounded.color6.fa-rocket
              h3 Nothing
              p Nothing
