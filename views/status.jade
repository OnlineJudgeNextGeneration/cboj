mixin giveTable(stat)
    tr
        td= stat.submissionId
        td= stat.user
        td= stat.problemId
        case stat.language
            when '0'
                td C++
            when '1'
                td Pascal
        case stat.status
            when undefined
                td 等待评测
            when 0
                td 答案正确
            when 1
                td 错误的答案
            when 2
                td 超过时间限制
            when 3
                td 运行时错误
            when 4
                td 编译错误
extends layout

block content
    include nav
    .col-md-9
        h3 状态显示&nbsp;&nbsp;
            small Status
        hr(style='margin: 0 0 0 0')
        br
        table.table-striped.table
            tr
                th(style='width: 80px') 提交编号
                th(style='width: 120px') 提交人
                th(style='width: 80px') 题目编号
                th(style='width: 60px') 语言
                th 状态
            each stat in status
                + giveTable(stat)
    .col-md-3

